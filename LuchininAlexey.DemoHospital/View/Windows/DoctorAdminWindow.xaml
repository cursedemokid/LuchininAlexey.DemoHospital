<Window x:Class="LuchininAlexey.DemoHospital.View.Windows.DoctorAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuchininAlexey.DemoHospital.View.Windows"
        mc:Ignorable="d"
        Title="DoctorAdminWindow" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="1" Grid.Column="1" Text="Id клиента" VerticalAlignment="Center"/>

        <TextBox Name="ClientIdTbx" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center"/>

        <Grid Grid.Row="1" Grid.Column="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Button Name="MedicalHistoryBtn" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Content="Открыть медицинскую историю"/>
            <Button Name="MedicalCardBtn" Grid.Row="0" Grid.Column="2" Content="Открыть медкарту"/>
            <Button Name="PolicyBtn" Grid.Row="0" Grid.Column="0" Content="Открыть страховку"/>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Image/>
            <TextBlock Grid.Row="3" Grid.Column="1" Text="ФИО" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="{Binding Name}"/>
            <TextBlock Grid.Row="1" Text="{Binding Surname}"/>
            <TextBlock Grid.Row="2" Text="{Binding Pantonymic}"/>
        </Grid>

        <TextBlock Grid.Row="5" Grid.Column="1" Text="Контакты" VerticalAlignment="Center" HorizontalAlignment="Right"/>

        <Grid Grid.Row="5" Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="{Binding Phone}"/>
            <TextBlock Grid.Row="1" Text="{Binding Email}"/>
        </Grid>

        <TextBlock Grid.Row="3" Grid.Column="5" Text="Пол"/>
        <TextBlock Grid.Row="3" Grid.Column="7" Text="{Binding Gender}"/>
        <TextBlock Grid.Row="3" Grid.Column="5" Text="Дата рождения" VerticalAlignment="Bottom"/>
        <TextBlock Grid.Row="3" Grid.Column="7" Text="{Binding DateOfBirth}" VerticalAlignment="Bottom"/>

        <TextBlock Grid.Row="5" Grid.Column="5" Text="Адрес"/>
        <TextBlock Grid.Row="5" Grid.Column="7" Text="{Binding Address}"/>
        <TextBlock Grid.Row="5" Grid.Column="5" Text="Место работы" VerticalAlignment="Bottom"/>
        <TextBlock Grid.Row="5" Grid.Column="7" Text="{Binding PlaceOfWork}" VerticalAlignment="Bottom"/>

        <TextBlock Grid.Row="7" Grid.Column="1" Text=""/>
    </Grid>
</Window>
