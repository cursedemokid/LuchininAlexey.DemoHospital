<Window x:Class="LuchininAlexey.DemoHospital.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuchininAlexey.DemoHospital"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Button Name="RegistrationBtn" Grid.Row="1" Grid.Column="1" Content="Зарегистрировать пациента" Click="RegistrationBtn_Click"/>
        <Button Name="HospitalizationBtn" Grid.Row="1" Grid.Column="3" Content="Госпитализация" Click="HospitalizationBtn_Click"/>
        <Button Name="DoctorAdminBtn" Grid.Row="3" Grid.Column="1" Content="Работа с пациентом" Click="DoctorAdminBtn_Click"/>

    </Grid>
</Window>
